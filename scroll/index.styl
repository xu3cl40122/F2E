
* 
    box-sizing border-box
h2,h3,p,html,body 
    margin 0
    padding 0
    font-family Roboto,sans-serif

// --- color --- 
light_blue = #1469FF
dark_blue = #0027C8  
pink = #FF3C82 

// --- function ---   
center()
    position absolute
    top 50%
    left 50% 
    transform translate(-50%,-50%)
.hide 
    display none
.opening 
    width 100% 
    height 100vh
    position relative
    background light_blue
    .star 
        center()
        z-index 20
        padding-bottom 57px
        .top
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 182.5px 313px 182.5px;
            border-color: transparent transparent pink transparent;
            
        .down
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 182.5px 313px 182.5px;
            border-color: transparent transparent pink transparent;
            transform rotate(180deg)
            position absolute
            top 57px
    .circle 
        center()
        width 530px 
        height 530px 
        background dark_blue 
        border-radius 50% 
        z-index 10
    .square 
        width 440px 
        height 440px 
        center()
        z-index: 5
        background black
    .textBlock 
        center()
        color white 
        text-align center
        z-index 25
        h2 
            font-size 64px
        h3 
            font-size 32px
            font-weight 200
.question1 
    width 100%
    height 100vh
    .leftBlock 
        width 100% 
        height 100% 
        background light_blue
        padding 100px 130px
    .questionContainer
        width 400px
        h2 
            color pink 
            font-size 64px 
        h3 
            color white 
            font-size 36px 
            margin-bottom 20px
        p 
            color dark_blue 
            font-size 24px
            margin-bottom 20px
        ul 
            padding 0 
            list-style none
        li      
            width 100% 
            height h = 55px 
            color white 
            border 2px solid white 
            border-radius 30px
            font-size 20px 
            line-height h
            text-align center
            margin-bottom 15px
            cursor pointer 
            transition all 0.2s ease-out
            &:hover 
                background white 
                color light_blue 
