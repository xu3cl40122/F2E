* 
    box-sizing border-box
html 
    font-family: 'Roboto', sans-serif;
body 
    margin 0 
    background #F2F2F2
h1,h2 
    margin 0 
p  
    margin 0
input[type=text]
    border none
    border-radius 2px
    &:focus 
        outline none
.link 
    text-decoration none
// --- color --- 
f_purple = #7828B4



// --------
navbar_height = 70px
.navbar
    width 100% 
    height navbar_height 
    position fixed 
    background f_purple
    display flex 
    align-items center
    position fixed
    z-index 30
    .navbar_logo 
        font-size 36px
        font-family 'Song Myung', serif;
        color white
        position absolute
        left 78px
    .navbar_search 
        position absolute
        left 384px
        background none
        border-bottom 1px solid rgba(255,255,255,0.5)
        width 388px 
        height 30px
        display flex 
        align-items center
        i 
            color rgba(255,255,255,0.5)
    .navbar_search_input 
        background none 
        width 280px
        padding 0 10px
        color rgba(255,255,255,0.5)
        font-size 20px 
        &::placeholder 
            color rgba(255,255,255,0.5)
.sidebar 
    width 20% 
    height 539px
    background #EBEBEB 
    position fixed 
    left 3%
    top navbar_height
    .sidebar_col 
        width 100% 
        padding 24px 20px
        h2  
            font-size 20px
            margin-bottom 10px
        select 
            border none
            width 160px 
            height 40px
            border-radius 2px
            font-size 16px
    .sidebar_col_inputDate 
        border none
        margin 5px 5px
    .sidebar_col_label 
        width 40px
        display inline-block
        text-align right
.main 
    width 77%
    margin-left 23%
    padding 80px 30px
    .main_state_container 
        width 100% 
        p,h2 
            display inline
            font-size 24px
        h2 
            color f_purple
            margin 0 4px
    .main_state_row 
        width 100% 
        padding 20px 0px
        display flex
    .main_state_col 
        width 128px 
        height h=35px 
        border 1px solid f_purple
        border-radius 100px
        margin-right 10px
        color f_purple
        font-size 16px
        text-align center    
        line-height h
        i 
            margin-left 5px
    .main_row 
        width 100%
        margin 0 auto
    .main_col 
        width 100%
        height 220px
        margin-bottom 24px
        background white
        display flex
        box-shadow 1px 1px 5px 1px rgba(0,0,0,0.1);
        transition box-shadow 0.2s ease-out
        transition transform 0.2s ease-out
        img 
            width 220px 
            height 100%
        &:hover 
            box-shadow 1px 1px 11px 2px rgba(0,0,0,0.2);
            transform: translate(-2px, -2px);// 浮起來的感覺

    .main_col_inf 
        width calc(100% - 220px)
        height 100%
        padding 24px 20px
        h2      
            color f_purple 
            font-size 24px
            margin-bottom 10px
    .main_col_inf_text 
        width 100% 
        font-size 16px
        margin-bottom 15px
        color black
        // --- 製造多行的 ...效果 不確定支援所有瀏覽器
        max-height 50px
        overflow hidden
        text-overflow ellipsis
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
        
    .main_col_inf_type 
        background #D7D7D7 
        border-radius 100px 
        width 131px 
        height h = 24px 
        font-size 16px 
        color white 
        text-align center 
        line-height h
    .main_col_inf_site 
        width 100%
        margin 15px 0
        p
            display inline
            color #9B9B9B
            margin-right 10px
        i 
            font-size 20px 
            margin 0 5px
            color #3e3d3d
    .main_pageContainer 
        width auto 
        height 40px
    .content_crumbs
        width 100% 
        height 48px 
        background #EBEBEB 
        margin 10px 0
        display flex 
        align-items center
        padding 0 16px 
        border-radius 4px 
        p 
            color #6f6f6f
            margin-right 10px
    .content_crumbs_explore 
        color f_purple
        font-size 16px
        margin-right 10px
    .content_img 
        width 100%
        display block
    .content_container 
        width 100%
        background white
        padding 20px 40px
        h1 
            font-size 36px 
            color f_purple 
            text-align center
    .content_inf 
        width 100%
        margin 15px 0
        p
            display inline
            color #9B9B9B
            margin-right 20px
        i 
            font-size 20px 
            margin 0 5px
            color #3e3d3d
    .content_inf_text 
        letter-spacing 0.1rem
    .content_goBack 
        width 100px 
        height h=40px 
        border 1px solid f_purple
        border-radius 5px
        margin-right 10px
        background f_purple
        font-size 16px
        text-align center    
        line-height h
        color white 
        margin-top 20px
        cursor pointer
        i 
            margin-left 5px
.pagination 
    display inline-flex 
    height h=35px
    border 1px solid #d4d4d4
    padding  0
    text-align center
    line-height h
    background white
    border-radius 5px
    cursor pointer
    li    
        list-style none
    .subPage
        display block
        width 2rem
        height 100%
        border-right 1px solid #d4d4d4
    .previous
        display block
        height 100%
        padding 0 10px
        border-right 1px solid #d4d4d4
    .next 
        display block
        height 100%
        padding 0 10px
    .active 
        background f_purple
        color white
    