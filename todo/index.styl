.todoList_row 
    width 100%
    margin-top 20px
    .todoList_col 
        width 100% 
        height 102px
        background t_lightGray
        border-radius 5px
        margin-bottom 8px
    .todoList_col-imp
        background #FFF2DC
    .todoList_titleContainer
        width 100% 
        height 60px 
        display flex
        align-items center 
        position relative
        padding 0px 32px 
    .todoList_stateContainer 
        min-width 200px 
        height auto 
        margin-left 75px
        display flex
        color #757575        
        i 
            margin-right 5px
        p 
            margin 0
    .todoList_col-completed
        width 100%
        height 76px 
        display flex
        align-items center 
        position relative
        background t_lightGray
        border-radius 5px
        margin-bottom 8px
        text-decoration line-through
        color #9B9B9B