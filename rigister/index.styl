* 
    box-sizing border-box
h1,h2,p 
    margin 0
    font-weight 100
html 
    font-family: 'Roboto', sans-serif;
form  
    width 100%
// --- color ---  
dark_main = #0275D8
light_main = #BEE1FF

// --- function ---   
formCol()
    padding-bottom: 30px
    h2 
        font-size 20px
        margin-bottom 5px

// --- class ---
.mainContainer
    width 600px 
    margin 0 auto
    padding-bottom 50px

.progressbar
    width 100%
    border-top 5px solid dark_main
    padding 40px 0
    text-align center
    h1 
        font-size 48px
    img     
        width 200px
    .bar 
        width 50%
        margin 0 auto
        display flex 
        align-items: center
        padding 50px 0
        color light_main
        position relative
        i  
            font-size 20px
    .line 
        width calc((100% -80px)/3) 
        height 2px 
        background light_main
    .done 
        color dark_main
    .line.done
        background dark_main
    
.formContainer
    width 100%
    display flex  
    flex-wrap: wrap
    justify-content: space-between
    input,select
        border 2px solid black
        border-radius 8px
        height 50px 
        font-size 20px 
        padding 5px 20px
        width 100%
        &:focus 
            outline none 
            border-color dark_main
        &::placeholder 
            color #999999  
    option 
        border 2px solid black
        border-radius 8px
    .submit
        width 100%
        height 50px 
        border-radius 8px
        background light_main
        border none
        color white
        font-size 20px
        cursor pointer
              
    .form_col-big 
        width 100%
        formCol()
    .form_col-middle 
        formCol()
        width calc(95%/2)
    .form_col-small 
        formCol()
        width calc(90%/3)
    .dragArea 
        width 100% 
        height 160px 
        border 2px solid black 
        border-radius: 8px
        display flex 
        align-items center
        justify-content center
        color #9B9B9B 
        i  
            font-size 48px
    .dragArea_hint 
        margin-left 20px
        h2 
            font-size 20px 
        p  
            font-size 16px
    .hidden 
        visibility hidden


