.grid_container
    display: grid
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: repeat(21, 1fr);
    grid-gap: 1px
    width: 960px
    height: 2100px
    margin: 0 auto
    margin-top: 15px
.logo
    display grid 
    grid-column: 3 / 7
    grid-row 1
    text-align center
    span 
        background black
        color white 
        font-size 20px
        width 131px 
        height h=30px
        line-height h
        justify-self center
    h2 
        font-size 72px 
        margin-top 20px

.block1 
