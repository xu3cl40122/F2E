* 
    box-sizing border-box
h1,h2 
    margin 0
html 
    font-family: 'Roboto', sans-serif;

// --- color ----  
m_blue = #50E3C2 

// --- var ---
picZindex = 5
borderZindex = 1
indexZindex = 10
lineZindex = 9
sidexZindex = 8
// --- function ---
pic()
    z-index: picZindex
    background-position: center;
    background-size: cover;
imgBorder()
    border 20px solid m_blue 
    z-index borderZindex
picTitle()
    font-size: 48px
    position relative
    font-weight 900
    z-index 10
    &:before 
        content attr(data-text)
        position: absolute;
        color: rgba(0, 0, 0, 0.3);
        top: -16px;
        left: 0;
        height: 22px;
        overflow: hidden;
    &:after
        content attr(data-text)
        position: absolute; 
        color: rgba(0, 0, 0, 0.1);
        top: -26px;
        left: 0;
        height: 22px;
        overflow: hidden;

// --- global class ---
.sideText 
    font-size 24px
    z-index sidexZindex
.index 
    font-size 48px
    z-index indexZindex
.lineArea
    z-index: lineZindex;
    background-image repeating-linear-gradient(
            -45deg,
            transparent,
            transparent 15px,
            m_blue 15px,
            m_blue 35px)


